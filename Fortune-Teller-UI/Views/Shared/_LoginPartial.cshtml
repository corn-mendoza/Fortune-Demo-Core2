@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Workshop" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Workshop" asp-action="Manage" title="Manage"><b>Hello @User.Identity.Name!</b></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><b>Log off</b></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav nav navbar-right">
        <li><a asp-area="" asp-controller="Workshop" asp-action="Login"><b>Log in</b></a></li>
    </ul>
}