                            <table class="table-responsive-md">
                                <tr class="flex-row">
                                    <td width="48" height="48" margin="5,5">
                                        <img src="~/images/Home.png" />
                                    </td>
                                    <td class="col-auto">
                                        <h4><b><a asp-area="" asp-controller="Workshop" asp-action="Index">Home</a></b></h4>
                                    </td>
                                </tr>
                                <tr class="flex-row">
                                    <td width="48" height="48" margin="5,5">
                                        <img src="~/images/Platform.png" />
                                    </td>
                                    <td class="col-auto">
